#include <iostream>
using namespace std;

int main() {
    int n, count = 0;
    cout << "Enter the size of the array: ";
    cin >> n;
    int arr[n];
    cout << "Enter the elements of the array: ";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
        if (arr[i] < 0) {
            count++;
        }
    }
    cout << "Total number of negative numbers: " << count << endl;
    return 0;
}
